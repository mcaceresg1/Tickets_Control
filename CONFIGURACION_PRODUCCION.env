# ===========================================
# CONFIGURACIÓN DEL SISTEMA DE TICKETS
# ENTORNO DE PRODUCCIÓN
# ===========================================

# Entorno de ejecución
NODE_ENV=production
PORT=3000

# Configuración de la API
API_PREFIX=/api

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
# Servidor SQL Server
DB_SERVER=161.132.56.68
DB_NAME=DB_A64885_tickets
DB_USER=sa
DB_PASSWORD=YourPassword
DB_PORT=1433

# Configuración SSL de base de datos para producción
DB_ENCRYPT=true
DB_TRUST_CERT=false

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN JWT
# ===========================================
JWT_SECRET=sis-tickets-super-secret-production-key-2025-change-this
JWT_EXPIRES_IN=24h

# ===========================================
# CONFIGURACIÓN CORS PARA PRODUCCIÓN
# ===========================================
CORS_ORIGIN=https://tk.nexwork-peru.com:8090
FRONTEND_URL=https://tk.nexwork-peru.com:8090

# ===========================================
# CONFIGURACIÓN SSL/HTTPS
# ===========================================
SSL_CERT_PATH=cert.pfx
SSL_CERT_PASSWORD=temppassword123

# ===========================================
# CONFIGURACIÓN ADICIONAL DE PRODUCCIÓN
# ===========================================
# Logging
LOG_LEVEL=info

# Timeouts
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=15000

# Pool de conexiones
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
